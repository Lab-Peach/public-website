extends /template.pug

block append vars
  - const hasTeaser = true

block teaser
  section.teaser
    != html.teaser
    .download
      a.button.button--white(href=siteData.meta.iosUrl) Download on iPhone
      a.button.button--white(href=siteData.meta.androidUrl) Download on Android
    != html.teaser_1
    a.scroll(href="#main"): +sprite("chevron-down")

block main
  section.wrap
    .content-wrap.content-wrap--centered
      != html.main
